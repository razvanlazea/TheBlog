<%= render(partial: "header") %>
<div class = "articles">
	<%= form_for :posts, :url => {:action => "create"}, method: :post do |f| %>
		Author: <br/> <%= f.text_field :name %><br/>
		Title: <br/> <%= f.text_field :title %><br/>
		Content: <br/> <%= f.text_area :content, cols: 31, rows: 30 %>
		<br/>Add Photos: <%= f.file_field :avatar %>
		<br/>
		<%= f.submit "Post article" %>
	<%end %>
</div>